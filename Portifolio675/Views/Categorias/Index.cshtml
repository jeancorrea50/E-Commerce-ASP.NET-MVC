@model IEnumerable<CategoriaModel>
@{
    ViewBag.Subtitulo = "Listagem de Categorias";
}

<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">@ViewBag.Subtitulo</h1>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">Nova Categoria</a>
    </div>
</header>
<hr>

<partial name="_Mensagem" />

@if (Model.Count() > 0)
{
    <table class="table table-striped tabela-categorias">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in Model)
            {
                <tr>
                    <td>@categoria.Nome</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@categoria.IdCategoria"
                    class="btn btn-sm btn-secondary">Alterar</a>
                        <a asp-action="Delete" asp-route-id="@categoria.IdCategoria" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhuma categoria cadastrada.</p>
}