@model Portifolio.Models.ViewModels.ProdViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Novo Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Prod.Categ." class="control-label"></label>
                @Html.DropDownList("CategId", Model.CategSelect, new { @class = "from-control" })
                <span asp-validation-for="Prod.Categ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prod.NomeProduto" class="control-label"></label>
                <input asp-for="Prod.NomeProduto" class="form-control" />
                <span asp-validation-for="Prod.NomeProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prod.Cor" class="control-label"></label>
                <input asp-for="Prod.Cor" class="form-control" />
                <span asp-validation-for="Prod.Cor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prod.Valor" class="control-label"></label>
                <input asp-for="Prod.Valor" class="form-control" />
                <span asp-validation-for="Prod.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prod.Categ" class="control-label"></label>
              @Html.DropDownList("CategId", Model.CategSelect, new {  @class = "from-control"})
                <span asp-validation-for="Prod.Categ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retorna Lista Produtos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
