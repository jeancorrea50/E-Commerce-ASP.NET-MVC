@model IEnumerable<ProdutoModel>
@{
    ViewBag.Subtitulo = "Listagem de Produtos";
}

<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">@ViewBag.Subtitulo</h1>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">Novo Produto</a>
    </div>
</header>
<hr>

<partial name="_Mensagem" />

@if (Model.Count() > 0)
{
    <table class="table table-striped tabela-produtos">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Quantidade</th>
                <th>Preço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.Nome</td>
                    <td>@produto.Categoria.Nome</td>
                    <td>@produto.Quantidade.ToString("D4")</td>
                    <td>@produto.Valor.ToString("C")</td>
                    <td>
                        <a asp-action="Create" asp-route-id="@produto.IdProduto" class="btn btn-sm btn-secondary"><i class="bi-pencil" title="Alterar"></i></a>
                        <a asp-action="Delete" asp-route-id="@produto.IdProduto" class="btn btn-sm btn-danger"><i class="bi-trash" title="Excluir"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhum produto cadastrado.</p>
}